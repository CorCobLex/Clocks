<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Clocks.MainPage">

    <FlexLayout Direction="Column" AlignItems="Start" JustifyContent="SpaceEvenly" Margin="20">


        <BoxView BackgroundColor="White"  WidthRequest="{Binding Hours}" HeightRequest="100" Margin="15,20,15,2"  />
        <BoxView BackgroundColor="White"  WidthRequest="{Binding Minutes}" HeightRequest="100" Margin="15,2"  />
        <BoxView BackgroundColor="White"  WidthRequest="{Binding Seconds}" HeightRequest="100" Margin="15,2,15,20"  />
        
      
        
    </FlexLayout>

</ContentPage>
